<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="user_surveys">
                <label>Surveys</label>
                <url>surveys</url>
                <title>Surveys</title>
                <prepare>true</prepare>
            </action>
        </reference>
    </default>
    <user_surveys_index_index translate="label">
        <label>Surveys List Page</label>

        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title" module="user_surveys">
                <title>Site Surveys</title>
            </action>
        </reference>
        <reference name="content">
            <block type="user_surveys/list" name="forms.list" template="usersurveys/forms/list.phtml">
                <block type="page/html_pager" name="forms.list.pager" as="forms_list_pager" />
            </block>
        </reference>
    </user_surveys_index_index>
  
    <user_surveys_index_featuredsurvey translate="`label">
        <label>Surveys Item Page</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/popup.phtml</template>
            </action>
        </reference>
        
          <reference name="content">
            <block type="user_surveys/item" name="forms.item" template="usersurveys/forms/item.phtml" />
        </reference>
    </user_surveys_index_featuredsurvey>

    <user_surveys_index_view translate="label">
        <label>Surveys Item Page</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
          <reference name="content">
            <block type="user_surveys/item" name="forms.item" template="usersurveys/forms/item.phtml" />
        </reference>
    </user_surveys_index_view>
    
</layout>
